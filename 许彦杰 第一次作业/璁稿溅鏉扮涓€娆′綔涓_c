//接收输入的三个数 判断输出较大的那个数
#include<stdio.h>
int main(){
    int i,j,k;
    printf("请输入第一个整数:");
    scanf("%d",&i);
    printf("请输入第二个整数:");
    scanf("%d",&j);
    printf("请输入第三个整数:");
    scanf("%d",&k);
    if(i>j){
        if (i>k)
        {
            printf("较大的数为：%d",i);
        }else{
            printf("较大的数为：%d",k);
        }
    }else{
        if (j>k)
        {
            printf("较大的数为：%d",j);
        }else{
            printf("较大的数为：%d",k);
        }
    }
}

